<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActvitiy">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/new_bg"
        tools:context=".Settings">



        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/applogo"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textViewNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification Preferences"
            android:textColor="@color/black"
            android:padding="5dp"
            android:background="@drawable/white_background"
            android:layout_marginTop="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16dp"/>

        <Switch
            android:id="@+id/switchNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewNotification"
            android:textColor="@color/black"
            android:padding="5dp"
            android:background="@drawable/white_background"
            android:layout_marginStart="16dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:checked="true"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <TextView
            android:id="@+id/textViewPrivacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Settings"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:padding="5dp"
            android:background="@drawable/white_background"
            android:layout_below="@id/switchNotification"
            android:layout_marginTop="50dp"
            android:layout_marginStart="16dp"/>


        <Button
            android:id="@+id/buttonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textViewPrivacy"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:background="@drawable/logout_btn"
            android:layout_marginTop="400dp"
            android:layout_marginStart="16dp"
            android:text="Save"/>




    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>